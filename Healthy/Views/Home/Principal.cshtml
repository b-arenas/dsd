<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Mi Dieta Semanal</h1>
    <div class="float-right">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#pagarModal">Comprar mi dieta</button>&nbsp;&nbsp;
